[irworkflowstep]
method = "post"

elements.workflow_id.type = "select"
elements.workflow_id.options.label = "Workflow"
displayGroups.irworkflowstep.elements.workflow_id = "workflow_id"

elements.role_id.type = "select"
elements.role_id.options.label = "Role"
displayGroups.irworkflowstep.elements.role_id = "role_id"

elements.sortorder.type = "select"
elements.sortorder.options.label = "Sort Order"
displayGroups.irworkflowstep.elements.sortorder = "sortorder"

elements.name.type = "text"
elements.name.options.label = "Name"
elements.name.options.validators.alnum.validator = "NotEmpty"
elements.name.options.required = true
displayGroups.irworkflowstep.elements.name = "name"

elements.description.type = "textarea"
elements.description.options.label = "Description"
elements.description.options.cols = "70%"
elements.description.options.rows = "7"
displayGroups.irworkflowstep.elements.description = "description"

elements.save.type = "Form_Button_Submit"
elements.save.options.label = "Save"
displayGroups.irworkflowstep.elements.save = "save"






