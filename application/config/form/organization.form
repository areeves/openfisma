[organization]
method = "post"
elementFilters.trim = "StringTrim"
elementFilters.tags = "StripTags"

elements.father.type = "select"
elements.father.options.label = "Organization Father Name"
elements.father.options.validators.alnum.validator = "NotEmpty"
elements.father.options.validators.strlen.validator = "StringLength"
elements.father.options.validators.strlen.options.min = "1"
elements.father.options.validators.strlen.options.max = "10"
displayGroups.organization.elements.father = "father"


elements.name.type = "text"
elements.name.options.label = "Organization Name"
elements.name.options.validators.alnum.validator = "NotEmpty"
elements.name.options.required = true
displayGroups.organization.elements.name = "name"

elements.nickname.type = "text"
elements.nickname.options.label = "Organization nickname"
elements.nickname.options.validators.alnum.validator = "NotEmpty"
elements.nickname.options.required = true
displayGroups.organization.elements.nickname = "nickname"

elements.submit.type = "submit"
elements.submit.options.value = "Save"
elements.submit.options.decorators.options.decorator = "ViewHelper"
elements.submit.options.decorators.opt.decorator = "HtmlTag"
elements.submit.options.decorators.opt.options.tag = "span"
displayGroups.organization.elements.submit = "submit"

