[system]
method = "post"
elementFilters.trim = "StringTrim"
elementFilters.tags = "StripTags"

elements.name.type = "text"
elements.name.options.label = "System Name"
elements.name.options.validators.strlen.validator = "StringLength"
elements.name.options.required = true
displayGroups.system.elements.name = "name"

elements.nickname.type = "text"
elements.nickname.options.label = "Acronym"
elements.nickname.options.validators.strlen.validator = "StringLength"
elements.nickname.options.required = true
displayGroups.system.elements.nickname = "nickname"

elements.organization_id.type = "select"
elements.organization_id.options.label = "Organization"
elements.organization_id.options.validators.alnum.validator = "NotEmpty"
elements.organization_id.options.validators.strlen.validator = "StringLength"
elements.organization_id.options.validators.strlen.options.min = "1"
elements.organization_id.options.validators.strlen.options.max = "10"
elements.organization_id.options.required = true
displayGroups.system.elements.organization_id = "organization_id"

elements.type.type = "select"
elements.type.options.label = "Type"
elements.type.options.validators.alnum.validator = "NotEmpty"
elements.type.options.validators.strlen.validator = "StringLength"
elements.type.options.required = true
displayGroups.system.elements.type = "type"

elements.desc.type = "textarea"
elements.desc.options.label = "System Description"
elements.desc.options.validators.strlen.validator = "StringLength"
elements.desc.options.validators.strlen.options.min = "1"
elements.desc.options.cols = "70%"
elements.desc.options.rows = "7"
elements.desc.options.required = true
displayGroups.system.elements.desc = "desc"

elements.confidentiality.type = "select"
elements.confidentiality.options.label = "Confidentiality"
elements.confidentiality.options.validators.alnum.validator = "NotEmpty"
elements.confidentiality.options.validators.strlen.validator = "StringLength"
elements.confidentiality.options.required = true
displayGroups.system.elements.confidentiality = "confidentiality"

elements.confidentiality_justification.type = "textarea"
elements.confidentiality_justification.options.label = "Confidentiality Justification and Data Type"
elements.confidentiality_justification.options.validators.strlen.validator = "StringLength"
elements.confidentiality_justification.options.validators.strlen.options.min = "1"
elements.confidentiality_justification.options.cols = "70%"
elements.confidentiality_justification.options.rows = "7"
elements.confidentiality_justification.options.required = true
displayGroups.system.elements.confidentiality_justification = "confidentiality_justification"

elements.integrity.type = "select"
elements.integrity.options.label = "Integrity"
elements.integrity.options.validators.alnum.validator = "NotEmpty"
elements.integrity.options.validators.strlen.validator = "StringLength"
elements.integrity.options.required = true
displayGroups.system.elements.integrity = "integrity"

elements.integrity_justification.type = "textarea"
elements.integrity_justification.options.label = "Integrity Justification and Data Type"
elements.integrity_justification.options.validators.strlen.validator = "StringLength"
elements.integrity_justification.options.validators.strlen.options.min = "1"
elements.integrity_justification.options.cols = "70%"
elements.integrity_justification.options.rows = "7"
elements.integrity_justification.options.required = true
displayGroups.system.elements.integrity_justification = "integrity_justification"

elements.availability.type = "select"
elements.availability.options.label = "Availability"
elements.availability.options.validators.alnum.validator = "NotEmpty"
elements.availability.options.validators.strlen.validator = "StringLength"
elements.availability.options.required = true
displayGroups.system.elements.availability = "availability"

elements.availability_justification.type = "textarea"
elements.availability_justification.options.label = "Availability Justification and Data Type"
elements.availability_justification.options.validators.strlen.validator = "StringLength"
elements.availability_justification.options.validators.strlen.options.min = "1"
elements.availability_justification.options.cols = "70%"
elements.availability_justification.options.rows = "7"
elements.availability_justification.options.required = true
displayGroups.system.elements.availability_justification = "availability_justification"

elements.submit.type = "submit"
elements.submit.options.value = "Save Changes"
displayGroups.system.elements.submit = "submit"

