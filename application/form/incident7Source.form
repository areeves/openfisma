[incident7Source]

elements.instructions.type = "Element_ConstantText"
elements.instructions.options.label = "Instructions"
elements.instructions.options.value = "<p>Provide a characterization of the source of this incident: who was involved, where it originated from, etc. The origin can be geographical or virtual, e.g. a street address or an IP address.</p>"
displayGroups.help.elements.instructions = "instructions"

elements.sourceIp.type="text"
elements.sourceIp.options.label="Source IP Address"
elements.sourceIp.options.style="width:125px"
displayGroups.incident.elements.sourceIp = "sourceIp"

elements.sourceAdditional.type="textarea"
elements.sourceAdditional.options.label="Additional information about the source"
elements.sourceAdditional.options.cols = "70%"
elements.sourceAdditional.options.rows = "7"
displayGroups.incident.elements.sourceAdditional = "sourceAdditional"
