[securitycontrolcatalog]

elements.name.type = "text"
elements.name.options.label = "Name"
elements.name.options.required = true
elements.name.options.attribs.size = 30
displayGroups.securitycontrolcatalog.elements.name = "name"

elements.published.type = "checkbox"
elements.published.options.label = "Published"
elements.published.options.tooltip = "Published catalogs are viewable by general users and can be assigned to findings. If a catalog is unpublished it will not be available to general users."
displayGroups.securitycontrolcatalog.elements.published = "published"

elements.description.type = "textarea"
elements.description.options.label = "Description"
elements.description.options.attribs.class = "plaintext"
elements.description.options.attribs.style = "height: 100px;"
displayGroups.securitycontrolcatalog.elements.description = "description"