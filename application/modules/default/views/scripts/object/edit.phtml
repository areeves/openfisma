        $deleteUrl = $url;
    }
    $actions .= "&nbsp;&nbsp;[<a href='$url' id = '" . $label . "Link' >$label</a>]";
}

Fisma_Format_Section::startSection('Edit: ' . $this->modelName . $actions); 

?>

<div>
    <?php echo $this->escape($this->form, 'none') ?>
</div>

<?php
Fisma_Format_Section::stopSection(); 

if (!empty($deleteUrl)):
?>
<script type="text/javascript">
    YAHOO.util.Event.onDOMReady(function () {

        var config = {url : '<?php echo $this->escape($deleteUrl) ?>',
                      isLink : true,
                      text : 'WARNING: You are about to delete the record. This action cannot be undone. '
                            + 'Do you want to continue?'};
        YAHOO.util.Event.addListener("DeleteLink", "click", Fisma.Util.showConfirmDialog, config);
    });
</script>
<?php
endif;
