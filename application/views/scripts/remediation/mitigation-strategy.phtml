    echo '<div class="approval">';
    foreach ($findingEvaluations = $this->actionFindingEvaluations as $k => $findingEvaluation) {
        $userName = $findingEvaluation['User']['nameFirst'] . ' ' . $findingEvaluation['User']['nameLast'];
        $decision = $findingEvaluation['decision'];
        $timestamp = $findingEvaluation['createdTs'];
        echo '<div class="approvalStep"><p><b>' 
           . html_entity_decode($findingEvaluation['Evaluation']['name']) 
           . ':</b>';
        if ('APPROVED' == $decision) {
            echo "<span class=\"approved\"><b>$decision</b> ($userName at $timestamp)</span></p>";
            if (!empty($findingEvaluation['comment'])) {
                echo $this->textToHtml($findingEvaluation['comment']);
            }
        } elseif ('DENIED' == $decision) {
            echo "<span class=\"denied\"><b>$decision</b> ($userName at $timestamp)</span></p>";
            if (!empty($findingEvaluation['comment'])) {
                echo $this->textToHtml($findingEvaluation['comment']);
            }
        }
        echo "</div>";
        if ($findingEvaluation['Evaluation']['nextId'] == null || 'DENIED' == $decision) {
            echo '</div>';
            if ($k != count($findingEvaluations)-1 || 'MSA' == $finding['status']) {
                echo '<div class="approval">';
            }
        }
    }

    $activeEvaluation = $finding['CurrentEvaluation'];
    if ($activeEvaluation['id'] != null && $activeEvaluation['approvalGroup'] == 'action') {
        echo '<div class="approvalStep"><p><b>' . html_entity_decode($activeEvaluation['name']) . '</b>';
        if ($this->findingCurrentEvaluationPrivilege) {
            echo '<input type="hidden" name="comment" value="" />';
            echo '<input type="hidden" name="decision" value="APPROVED" />';
