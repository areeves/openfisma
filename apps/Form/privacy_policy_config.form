[privacy_policy_config]
method = "post"

elements.privacy_policy.type = "textarea"
elements.privacy_policy.options.label = "Privacy Policy"
elements.privacy_policy.options.validators.strlen.validator = "StringLength"
elements.privacy_policy.options.validators.strlen.options.min = "1"
elements.privacy_policy.options.cols = "80"
elements.privacy_policy.options.rows = "30"
displayGroups.general.elements.privacy_policy = "privacy_policy"

elements.submit.type = "submit"
elements.submit.options.value = "Save Changes"
displayGroups.general.elements.submit = "submit"

