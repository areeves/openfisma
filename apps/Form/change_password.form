[change_password]
method = "post"
action = "/panel/user/sub/pwdchange/s/save"
elementFilters.tags = "StripTags"

elements.old_password.type = "password"
elements.old_password.options.label = "Old Password"
displayGroups.general.elements.old_password = "old_password"

elements.new_password.type = "password"
elements.new_password.options.label = "New Password"
displayGroups.general.elements.new_password = "new_password"

elements.confirm_password.type = "password"
elements.confirm_password.options.label = "Confirm Password"
displayGroups.general.elements.confirm_password = "confirm_password"

elements.submit.type = "submit"
elements.submit.options.value = "Save Changes"
displayGroups.general.elements.submit = "submit"
